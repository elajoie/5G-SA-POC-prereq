set timeout=60
menuentry 'OpenShift {{ ocp_release }} RHCOS' {
  kernel  http://{{ srv_ip }}:8080/images/rhcos-{{ ocp_release }}-x86_64-installer-kernel-x86_64 ip=dhcp rd.neednet=1 initrd=http://{{ srv_ip }}:8080/images/rhcos-{{ ocp_release }}-x86_64-installer-initramfs.x86_64.img console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.install_dev={{ [item].disk }} coreos.inst.image_url=http://{{ srv_ip }}:8080/images/rhcos-{{ ocp_release }}-x86_64-metal.x86_64.raw.gz coreos.inst.ignition_url=http://{{ srv_ip }}:8080/ignition/{{ [item].name | regex_replace('[0-9]') }}.ign  
  initrd http://{{ srv_ip }}:8080/images/rhcos-{{ ocp_release }}-x86_64-installer-initramfs.x86_64.img
}

menuentry '{{ rhel_version }} with CDN' {
  linuxefi images/{{ rhel_version }}/vmlinuz ip=dhcp inst.stage2=http://{{ srv_ip }}:8080/{{ rhel_version }}  inst.ks=http://{{ srv_ip }}:8080/kickstarts/ks.cfg-01-{{ [item].macaddr | hwaddr('eui48') | lower }}
  initrdefi images/{{ rhel_version }}/initrd.img
}
